pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Build the code using a build automation tool (e.g., Maven)'
                }
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                script {
                    echo 'Run unit and integration tests using test automation tools (e.g., JUnit, pytest)'
                }
            }
            post {
                always {
                    mail to: "jayalan2225349@gmail.com",
                         subject: "Unit and Integration Tests Stage Notification",
                         body: "Successly send notification"
                         attachLog: true
                }
            }
        }

        stage('Code Analysis') {
            steps {
                script {
                    echo 'Analyze code quality using a code analysis tool (e.g., SonarQube)'
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    echo 'Perform a security scan using a security scanning tool (e.g., OWASP Dependency-Check)'
                    echo 'Additional security scan step or command'
                }
            }
            post {
                always {
                    mail to: "jayalan2225349@gmail.com",
                         subject: "Security Scan Stage Notification",
                         body: "Successly send notification"
                         attachLog: true
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                script {
                    echo 'Deploy the application to a staging server (e.g., AWS EC2) using deployment tools'
                }
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                script {
                    echo 'Run integration tests in the staging environment using relevant testing tools'
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                script {
                    echo 'Deploy the application to a production server (e.g., AWS EC2) using deployment tools'
                }
            }
        }
    }

    post {
        success {
            mail to: "jayalan2225349@gmail.com",
                 subject: "Pipeline Success Notification",
                 body: "All stages are running successfully."
                 attachLog: true
        }
        failure {
            mail to: "jayalan2225349@gmail.com",
                 subject: "Pipeline Failure Notification",
                 body: "The pipeline has failed. Please check the logs for details."
                 attachLog: true
        }
    }
}
