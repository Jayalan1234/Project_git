pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building code...'
                sh 'mvn clean package'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit tests...'
                sh 'mvn test'
                echo 'Running integration tests...'
                sh 'mvn verify'
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Analyzing code...'
                sh 'sonar-scanner'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Scanning for security vulnerabilities...'
                sh 'snyk test'
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging...'
                sh 'aws deploy ...'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on staging...'
                sh 'mvn verify -Pstaging'
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to production...'
                sh 'aws deploy ...'
            }
        }
    }
    post {
        success {
            mail to: 'jayalan2225349@example.com',
                 subject: "Pipeline Success: ${env.JOB_NAME} ${env.BUILD_NUMBER}",
                 body: "The pipeline ${env.JOB_NAME} build #${env.BUILD_NUMBER} was successful.\n\nCheck the Jenkins job for more details."
        }
        failure {
            mail to: 'jayalan2225349@example.com',
                 subject: "Pipeline Failure: ${env.JOB_NAME} ${env.BUILD_NUMBER}",
                 body: "The pipeline ${env.JOB_NAME} build #${env.BUILD_NUMBER} failed.\n\nCheck the Jenkins job for more details.",
                 attachLog: true
        }
    }
}
